<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form method="post" style="width: 300px;">
        <div class="form-group">
            <label for="user">Usuário</label>
            <input class="form-control mx-auto" id="user" placeholder="Seu usuário" name="UserIn" autocomplete="true"
                required>
        </div>
        <div class="form-group">
            <label for="pass">Senha</label>
            <input type="password" class="form-control mx-auto" id="pass" placeholder="Senha" name="PassIn"
                autocomplete="true" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3" asp-controller="Login" asp-action="Logon">Acessar</button>

        <div class="mt-2">
            <a class="link-primary" asp-area="" asp-controller="Login" asp-action="NewUser">Primeiro acesso</a>
        </div>
    </form>
    <div class="text-danger mt-2">
        @ViewData["Message"]
        @if (ViewBag.Sucess == true)
        {
            <div class="alert alert-success">
                Usuário cadastrado com sucesso!
            </div>
        }
    </div>

</div>
