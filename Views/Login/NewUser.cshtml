<div class="text-center">
    <h1 class="display-4">Novo login</h1>
    <form method="post">
        <div class="form-group">
            <label for="user">Usuário</label>                           
            <input class="form-control mx-auto" id="user" placeholder="Seu usuário" name="UserIn" autocomplete required>                       
        </div>
        <div class="form-group">
            <label for="pass">Senha</label>
            <input type="password" class="form-control mx-auto" id="pass" placeholder="Senha" name="PassIn" autocomplete required>
        </div>        
        <button type="submit" class="btn btn-primary mt-3"  asp-controller="Login" asp-action="AddNewUser">Cadastrar</button>                            
        <div class="mt-2">
            <a class="link-primary" asp-area="" asp-controller="Login" asp-action="Index">Voltar</a>
        </div>        
    </form>
    <div class="text-danger mt-2">
        @ViewData["Message"]
    </div>
    
</div>
